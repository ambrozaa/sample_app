<% provide(:title, @title) %>
<div class="row justify-content-md-center">
  <div class="col-md-4 buffer-top">
      <%= gravatar_for @user %>
      <h3><%= @user.name %></h3>
      <%= link_to "view my profile", @user %>
      <b>Microposts:</b> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user), user %>
          <% end %>
        </div>
      <% end %>
  </div>
  <div class="col-md-8 buffer-top">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>